<h1>{{title}}</h1>
 
<section>
    <!-- Name Input -->
    <div id="name-input-container" class="d-block">
        <p>To Start,</p>
        <p>Enter Your Name</p>
        <input class="mb-4" id="nameInput" type="text">
        <button class="buttonName mt-2" id="buttonName" type="submit">PLAY</button>
    </div>
    <!-- Name Input end -->

    <!-- Game Interface -->
    <div id="game-interface-container" class="d-none"> <!-- display: none to Start -->
        <p>Now You,</p>
        <p>Guess Number Between 1 to 10</p>
        <input type="text" class="guessInput">
        <button class="btn btn-primary buttonGuess" type="submit">Guess</button>
        <button class="btn btn-danger buttonRestart" type="submit">Restart</button>
        <p class="output"></p>
        <p class="prevGuess"></p>
    </div>
    <!-- Game Interface end -->
 </section>

<a href="/" class="btn btn-primary">Back To Home!!</a>
